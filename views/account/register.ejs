<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/') } %>


<div class="login-box">
    <% if (errors) { %>
        <div class="notice">
       <% errors.array().forEach(error => { %>
         <p><%= error.msg %></p>
      <%  }) %>
       </div>
    <% } %>
    
    <form action="/account/register" method="post">
        <label for="fname">First Name:</label>
        <input type="fname" id="fname" name="account_firstname" placeholder="Enter your first name" required value="<%= locals.account_firstname %>">

        <label for="lname">Last Name:</label>
        <input type="lname" id="lname" name="account_lastname" placeholder="Enter your last name" required value="<%= locals.account_lastname %>">

        <label for="email">Email:</label>
        <input type="email" id="email" name="account_email" placeholder="Enter your email" required value="<%= locals.account_email %>">

        <label for="password">Password:</label>
        <input type="password" id="password" name="account_password" placeholder="Enter your password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 

        <button type="submit">SIGN UP</button>
    </form>
    <p>Have an account? <a href="login">Log-In</a></p>
</div>